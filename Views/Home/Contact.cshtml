@model KGCBank.Models.ContactModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<link href="~/Content/Contact.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
<body>
    <div class="content">
        <div class="left-section">
            <img src="~/Content/Images/Contact us.png" class="background-contact" alt="contact">
        </div>
        <div class="right-section">
            <div class="container">
                <div class="content">
                    <div class="left-side">
                        <div class="address details">
                            <i class="fas fa-map-marker-alt"></i>
                            <div class="topic">Address</div>
                            <div class="text-one">Malappuram,Kerala</div>
                        </div>
                        <div class="phone details">
                            <i class="fas fa-phone-alt"></i>
                            <div class="topic">Phone</div>
                            <div class="text-one">+91 98950 12345</div>
                        </div>
                        <div class="email details">
                            <i class="fas fa-envelope"></i>
                            <div class="topic">Email</div>
                            <div class="text-one">thevibranteye@gmail.com</div>
                        </div>
                    </div>
                    <div class="right-side">
                        <div class="topic-text">Send us a message</div>
                        <p>If you have any work from me or any types of quries related to my tutorial, you can send me message from here. It's my pleasure to help you.</p>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="input-box">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your name", @id = "Name", onfocusout = "Checkname()" } })
                                <small></small>
                            </div>
                            <div class="input-box">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your email", @id = "Email", onfocusout = "Checkemail()" } })
                                <small></small>
                            </div>
                            <div class="input-box message-box">
                                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your message", @id = "Message", onfocusout = "Checkmessage()" } })
                                <small></small>
                            </div>
                            <div class="button">
                                <input type="submit" value="Send Now" class="form-button" onclick="Checkvalidation()">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/Javascript/script-contact.js"></script>
</body>